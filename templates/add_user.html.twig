{# templates/add_user.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Add New User{% endblock %}

{% block body %}
    <h1>Add New User</h1>

    {# Display any form errors here #}
    {% if errors is not empty %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {# Render the form #}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Submit</button>
    {{ form_end(form) }}
{% endblock %}
